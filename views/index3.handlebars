<div id="dialog" title="CREATE">
    <form action="/routes" method="POST" class="mb-4">
        <div class="form-group">
            <label for="bookName" class="book">Book Name</label>
            <input type="text" name="bookName" class="form-control" />
        </div>
        <div class="form-group">
            <label for="publisher">Publisher</label>
            <input type="text" name="publisher" class="form-control" />
        </div>
        <div class="form-group">
            <label for="publisher">Author</label>
            <input type="text" name="author" class="form-control" />
        </div>
        <div class="form-group">
            <label for="isbn">Book ISBN</label>
            <input required type="number" name="isbn" class="form-control" />
        </div>
        <div class="form-group">
            <label for="datePublisher">Book Published</label>
            <input type="text" name="datePublish" class="form-control" />
        </div>
        <div class="text-center">
            <input class="btn btn-primary m-2 " type="submit" value="Add Book" />
        </div>
    </form>
</div>

<div id="dialog2" title="SEARCH BOOK" class="text-center">
    <input id="numbering" type="number" placeholder="ID | 1-99 DIGITS" class="my-2">
    <button onclick="hello()" class="btn btn-primary my-2">Search</button>
</div>

<div id="hawa" title="Confirmation" class="text-center">
    <h5>Are you sure?</h5>
    <div>
        <button id="yes" class="btn btn-success">Yes</button>
        <button id="no" class="btn btn-danger">No</button>
    </div>
</div>

<script>
    $("#dialog").dialog({
        autoOpen: false,
        show: {
            effect: "explode",
            duration: 1000
        },
        hide: {
            effect: "explode",
            duration: 1000
        }
    });
    
    $("#opener").click(function () {
        $("#dialog").dialog("open");
    });

    document.getElementById('videJ2').addEventListener('click', viewJ2)
    function viewJ2() {
        window.open("/routes", "_blank",
            "toolbar=yes,scrollbars=yes,resizable=yes,top=50,left=500,width=500,height=650");
    }

    $("#dialog2").dialog({
        autoOpen: false,
        show: {
            effect: "bounce",
            duration: 1000
        },
        hide: {
            effect: "bounce",
            duration: 1000
        }
    });
    $("#opener2").click(function () {
        $("#dialog2").dialog("open");
    });

    function hello() {
        let n = document.getElementById('numbering').value
        window.open(`/routes/${n}`, "_blank",
            "toolbar=yes,scrollbars=yes,resizable=yes,top=50,left=500,width=500,height=650");
    }

    function deletion() {
        let n = document.getElementById('numbering').value
        window.open('https://web.postman.co/workspace/My-Workspace~f99c63f1-b0d3-4d4a-85ba-7550e2db153b', "_blank",
            "toolbar=yes,scrollbars=yes,resizable=yes,top=50,left=100,width=1300,height=650");
    }

    $("#hawa").dialog({
        autoOpen: false,
        show: {
            effect: "pulsate",
            duration: 1000
        },
        hide: {
            effect: "explode",
            duration: 1000
        }
    });

    $(".hawana").click(function () {
        $("#hawa").dialog("open");
    });

    document.getElementById('no').addEventListener('click', () => $('#hawa').hide())
    document.getElementById('yes').addEventListener('click', () => {
        var url = '/homepage';
        $(location).prop('href', url);
    })

</script>
